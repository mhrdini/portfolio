<main class="flex h-screen items-center justify-center text-3xl font-bold">
  <span class="wip text-center">
    <span class="gradient select-none">work in progress * ੈ✩‧₊˚</span>
    <span
      class="inner-blur select-none before:content-[attr(data-text)]"
      data-text="work in progress * ੈ✩‧₊˚"></span>
  </span>
</main>
<style>
  .wip {
    position: relative;

    &:hover {
      & > .gradient {
        filter: none;
      }

      & > .inner-blur {
        visibility: hidden;
      }
    }
  }

  .gradient {
    display: inline-block;
    visibility: visible;
    background: rgb(2, 0, 36);
    background: linear-gradient(
      90deg,
      rgba(2, 0, 36, 1) 0%,
      rgba(27, 9, 121, 1) 23%,
      rgba(193, 101, 233, 1) 50%,
      rgba(27, 9, 121, 1) 92%,
      rgba(2, 0, 36, 1) 100%
    );
    background-size: auto auto;
    background-clip: border-box;
    background-size: 200% auto;
    background-clip: text;
    text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient 4s linear reverse infinite;
    filter: blur(1px);
  }

  .inner-blur {
    display: block;
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    color: #191919;
    opacity: 0.1;
    animation: blur 400ms alternate-reverse cubic-bezier(1, 0, 0, 1) infinite;
  }

  @keyframes gradient {
    to {
      background-position: 200% center;
    }
  }

  @keyframes blur {
    0% {
      transform: translate(-4px, 1px);
    }

    20% {
      transform: translate(-2px, 1px);
    }

    40% {
      transform: translate(-1px, -3px);
    }

    80% {
      transform: translate(-3px, -2px);
    }

    100% {
      transform: translate(4px, 2px);
    }
  }
</style>
